    "amqplib": "^0.10.3",
    "axios": "^1.5.0",
    "bcrypt": "^5.1.1",
    "class-sanitizer": "^1.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "date-fns": "^3.3.1",
    "helmet": "^7.0.0",
    "husky": "^8.0.3",
